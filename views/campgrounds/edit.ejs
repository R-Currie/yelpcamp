<% include ../partials/header %>
<div class='container'>
	<div class='text-center'>
		<h1 style='padding-top: 20px;'>Edit <%= campground.name %></h1>
		<div style='width: 30%; margin: 25px auto;'>
			<form action='/campgrounds/<%= campground._id %>/?_method=PUT' method='POST'>
				<div class="form-group">
					<input class='form-control' type='text' value='<%= campground.name %>' name='campground[name]'>
				</div>
				<div class="form-group">
					<input class='form-control' type='number' value='<%= campground.price%>' name='campground[price]' min='0.01' step='0.01'>
				</div>
				<div class="form-group">
					<input class='form-control' type='text' value='<%= campground.image %>' name='campground[image]'>
				</div>
				<div class="form-group">
					<input class='form-control' type='text' value='<%= campground.description %>' name='campground[description]'>
				</div>
				<div class="form-group">
    				<label for="location">Location</label>
    				<input class="form-control" type="text" name="campground[location]" id="location" value='<%= campground.location %>'>
				</div>
				<button class='btn btn-lg btn-success btn-block'>Update</button>
			</form>

		</div>
		<br />
		<a href='/campgrounds'>Go back</a>
	</div>
</div>

<% include ../partials/footer %>