<% include ../partials/header %>
<div class='container'>
	<div class='text-center'>
		<h1 style='padding-top: 20px;'>Create a new campground</h1>
		<div style='width: 30%; margin: 25px auto;'>
			<form action='/campgrounds' method='POST'>
				<div class="form-group">
					<label for="name">Name</label>
					<input class='form-control' type='text' placeholder='Name' name='name'>
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class='form-control' type='number' placeholder='Price' name='price' min='0.01' step='0.01'>
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input class='form-control' type='text' placeholder='Image url' name='image'>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class='form-control' type='text' placeholder='Description' name='description'>
				</div>
				<div class="form-group">
    				<label for="location">Location</label>
    				<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
				</div>
				<button class='btn btn-lg btn-success btn-block'>Submit</button>
			</form>
		</div>
		<br />
		<a href='/campgrounds'>Go back</a>
	</div>
</div>

<% include ../partials/footer %>